    android:orientation="vertical"
    tools:context="digitalhouse.android.a0317moacns1c_02.Fragments.PersonListFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="14dp"
        android:text="Cast"
        android:id="@+id/textViewPersonListTitle"/>
