<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="8dp"
    tools:context="digitalhouse.android.a0317moacns1c_02.Fragments.RateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings:"
            android:paddingBottom="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/textViewRatings"
            />
        <ImageView
            android:id="@+id/imageViewRateIMDB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imdb_icon"
            android:layout_below="@+id/textViewRatings"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/textViewIMDbRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imageViewRateIMDB"
            android:layout_alignBottom="@+id/imageViewRateIMDB"
            android:layout_alignTop="@+id/imageViewRateIMDB"
            android:gravity="center"
            android:text="9.5"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/textViewIMDbMaxRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewRateIMDB"
            android:layout_alignTop="@+id/imageViewRateIMDB"
            android:layout_toEndOf="@+id/textViewIMDbRate"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="/10"
            android:textSize="10dp" />
        <ImageView
            android:id="@+id/imageViewTMDB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/imageViewRateIMDB"
            android:src="@drawable/tmdb_icon"/>
        <TextView
            android:id="@+id/textViewTMDBRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewTMDB"
            android:layout_alignTop="@+id/imageViewTMDB"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imageViewTMDB"
            android:text="6.5"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/textViewTMDBMaxRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewTMDBRate"
            android:layout_toEndOf="@+id/textViewTMDBRate"
            android:layout_alignTop="@+id/textViewTMDBRate"
            android:paddingTop="5dp"
            android:foregroundGravity="center"
            android:gravity="center_vertical"
            android:text="/10"
            android:textSize="10dp" />
        <ImageView
            android:id="@+id/imageViewRottenTomatoes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/textViewIMDbMaxRate"
            android:layout_alignBottom="@+id/imageViewRateIMDB"
            android:src="@drawable/rottentomatoes_icon"
            />
        <TextView
            android:id="@+id/textViewRottenTomatoesPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageViewRottenTomatoes"
            android:layout_alignTop="@+id/imageViewRottenTomatoes"
            android:layout_toEndOf="@+id/imageViewRottenTomatoes"
            android:text="79%"
            android:textSize="17dp"/>
        <ImageView
            android:id="@+id/imageViewMetacritic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/textViewTMDBMaxRate"
            android:layout_alignBottom="@+id/imageViewTMDB"
            android:src="@drawable/metacritic_icon"
            />
        <TextView
            android:id="@+id/textViewMetacriticRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageViewMetacritic"
            android:layout_alignTop="@+id/imageViewMetacritic"
            android:layout_toEndOf="@+id/imageViewMetacritic"
            android:textStyle="bold"
            android:text="76"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/textViewMetacriticMaxRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewMetacritic"
            android:layout_alignTop="@+id/imageViewMetacritic"
            android:layout_toEndOf="@+id/textViewMetacriticRate"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="/100"
            android:textSize="10dp" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBarMVSScore"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cpb_background_progressbar_color="#43387bf5"
                app:cpb_background_progressbar_width="8dp"
                app:cpb_progressbar_color="@color/colorPrimaryDark"
                app:cpb_progress="85"
                app:cpb_progressbar_width="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:id="@+id/textViewMoviewsScore"
                    android:text="85"
                    android:textSize="65dp"
                    android:layout_gravity="center"
                    />
        </FrameLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
