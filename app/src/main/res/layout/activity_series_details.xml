<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="digitalhouse.android.a0317moacns1c_02.Activities.SeriesDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutSDTitle"
        ></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayoutSDTitle"
        android:id="@+id/frameLayoutSDSummary"
        ></FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="4dp"
        android:id="@+id/cardViewSDSummary"
        android:layout_below="@+id/frameLayoutSDSummary"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayoutSDRatings"
            android:orientation="vertical"
            ></LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="4dp"
        android:id="@+id/cardViewSDPoster"
        android:layout_below="@+id/frameLayoutSDSummary"
        android:layout_alignRight="@id/frameLayoutSDSummary"
        >
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="160dp"
            android:layout_height="250dp" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutSDMedia"
        android:layout_below="@+id/cardViewSDSummary"
        ></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutSDCasting"
        android:layout_below="@+id/frameLayoutSDMedia"
        ></FrameLayout>

</RelativeLayout>
