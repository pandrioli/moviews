<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutBoorkmarkMovie">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/poster"
            android:scaleType="centerCrop"
            android:id="@+id/imageBookmarkMovie" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleBookmarkMovie"
            android:layout_toEndOf="@+id/imageBookmarkMovie"
            android:layout_marginEnd="40dp"
            android:padding="8dp"
            android:textSize="17sp"
            android:textColor="@color/primary_text"
            android:text="Guardians of Galaxy"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/more_black_hor_xhdpi"
            android:id="@+id/moreOptionsBookmark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved:"
            android:id="@+id/savedTextBookmark"
            android:padding="8dp"
            android:textSize="15sp"
            android:textColor="@color/secondary_text"
            android:layout_below="@+id/titleBookmarkMovie"
            android:layout_alignLeft="@+id/titleBookmarkMovie"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateBoorkmarkMovie"
            android:layout_below="@+id/titleBookmarkMovie"
            android:layout_toEndOf="@+id/savedTextBookmark"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="10/07/2017"
            android:textSize="15sp"
            android:textColor="@color/secondary_text"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
